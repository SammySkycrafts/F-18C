<?xml version="1.0"?>

<!-- comms panel -->

<PropertyList>

  <!--  left panel -->
  <animation>
    <type>material</type>

    <object-name>hydr</object-name>
    <object-name>elec</object-name>
    <object-name>oiltemp</object-name>
    <ambient>
      <red>0.0</red>
      <green>1.0</green>
      <blue>0.0</blue>
    </ambient>
    <diffuse>
      <red>0.0</red>
      <green>0.1</green>
      <blue>0.0</blue>
    </diffuse>
    <emission>
      <red>0.3</red>
      <green>0.8</green>
      <blue>0.3</blue>
    </emission>
  </animation>


  <text>
    <name>hydr</name>
    <font>lcd.txf</font>
    <character-size type="double">0.005</character-size>
    <offsets>
      <x-m>-4.53</x-m>
      <y-m>-0.217</y-m>
      <z-m>0.787</z-m>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">%4.1f</format>
    <truncate type="bool">false</truncate>
    <property>engines/engine[0]/n2</property>
    <draw-text type="bool">true</draw-text>
    <alignment>right-top</alignment>
  </text>

  <text>
    <name>elec</name>
    <font>lcd.txf</font>
    <character-size type="double">0.005</character-size>
    <offsets>
      <x-m>-4.54</x-m>
      <y-m>-0.221</y-m>
      <z-m>0.765</z-m>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">%4.1f A</format>
    <truncate type="bool">false</truncate>
    <property>systems/electrical/amps</property>
    <draw-text type="bool">true</draw-text>
    <alignment>right-top</alignment>
  </text>

  <text>
    <name>oiltemp</name>
    <font>lcd.txf</font>
    <character-size type="double">0.005</character-size>
    <offsets>
      <x-m>-4.535</x-m>
      <y-m>-0.221</y-m>
      <z-m>0.753</z-m>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">%4.1f</format>
    <truncate type="bool">false</truncate>
    <property>engines/engine[0]/oil-temp-c</property>
    <draw-text type="bool">true</draw-text>
    <alignment>right-top</alignment>
  </text>
</PropertyList>