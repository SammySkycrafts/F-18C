<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <model>
    <name>LandingLightFlash</name>
    <path>Aircraft/F-18C/Models/Lights/Flares/LandingLight-flash.xml</path>
  </model>


  <model>
    <name>LandingLightCone</name>
    <path>Aircraft/F-18C/Models/Lights/LightCone/LandingLight-cone.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>LandingLightFlash</object-name>
    <object-name>LandingLightCone</object-name>
    <condition>
      <and>
        <property>lightpack/landing-lights-intensity</property>
        <not>
          <property>sim/crashed</property>
        </not>
      </and>
    </condition>
  </animation>

</PropertyList>